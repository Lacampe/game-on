<div class="banner" style="background-image: url(<%= image_path('tennis-background.jpg') %>)">
  <div class="banner-content">
    <div id="presentation">
      <h1>SEARCH. BOOK. PLAY.</h1>
      <p>Book a sport venue around you in a few clicks</p>
    </div>
    <%= form_tag spaces_path, method: "get", class: "form-inline" do %>
      <div class="form-group">
        <%= select_tag :category, options_for_select([["Football"], ["Basketball"], ["Tennis"], ["Squash"]]), class: "form-control", prompt: "Choose your sport" %>
      </div>
      <div class="form-group">
        <%= text_field_tag(:location, "", class: "form-control", placeholder: "Location") %>
      </div>
      <div class="form-group">
        <%= text_field_tag(:date, "", class: "form-control datepicker", placeholder: "Date") %>
      </div>
      <button type="submit" class="btn btn-danger">Search</button>
    <% end %>
  </div>
</div>

