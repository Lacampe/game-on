<div class="col-xs-12 col-sm-6 col-md-4">
   <% if space.photos %>
    <% image = cl_image_path(space.photos.first.path, width: 300, height: 200, crop: :fill) %>
  <% else %>
    <%= image = image_path('logo.png') %>
  <% end %>

  <div class="card">
    <img class="card-img-top" src="<%= image %>" alt="Card image cap">
    <div class="card-block">
      <h4 class="card-text"><%= space.name %></h4>
      <p class="card-text"><%= space.address %></p>
      <div class="banner-price">
      <p>$<%= space.price_per_hour %>/hr</p>
      </div>
      <div class="banner-category"> <%= image_tag "#{space.category}.png" %></div>

      </div>

  </div>
</div>



