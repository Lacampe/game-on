

<div class="container" style="margin-top: 100px; margin-bottom: 100px;">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <%= simple_form_for([booking, review]) do |f| %>

      <%= f.input :title, placeholder: 'Give your review a title' %>

      <%= f.input :content, placeholder: 'Review details' %>

      <%= f.input :rating, as: :radio_buttons,
      collection: [1, 2, 3, 4, 5], class: 'radio-inline' %>

      <%= f.button :submit , class: 'btn-form'%>
      <% end %>
    </div>
  </div>
</div>
