<% content_for :title, "GameOn - #{@user.first_name} #{@user.last_name} profile" %>

<div class="container">
  <div class="row breath"></div>
  <div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
      <div class="profile-info">
        <% if @user.photo %>
          <%= cl_image_tag @user.photo.path, transformation: [{width: 250, height: 250, gravity: 'face', radius: 'max', crop: 'thumb'}, {width: 100}], class: "avatar-large profile-info-avatar" %>
        <% elsif @user.facebook_picture_url %>
          <%= image_tag current_user.facebook_picture_url, class: "avatar-large profile-info-avatar" %>
        <% else %>
          <%= image_tag "blank-avatar.png", class: "avatar-large profile-info-avatar" %>
        <% end %>
        <h3 class="profile-info-name"><%= @user.full_name %></h3>
        <p><em>Member since <%= I18n.l(@user.created_at, format: "%B %Y") %></em></p>
      </div>
    </div>
    <div class="col-sm-3"></div>
  </div>
  <div class="row breath"></div>
  <div class="row" style="background-color: white; border-radius: 3px; box-shadow: 1px 1px 2px lightgrey;">
    <div class="row">
    <div class="col-sm-2 " style="margin-left: 20px">
      <h4>My Bookings</h4>
    </div>
    </div>
    <div class="row">
    <div class="col-sm-1"></div>
    <div class="col-sm-10">
      <div class="row">
        <% @user.bookings.each do |booking| %>
          <div class="col-sm-3">
            <%= render 'shared/mini_card', booking: booking %>
          <% end %>
        </div>
      </div>
    </div>
    </div>
  </div>
  <div class="row breath"></div>
    <div class="row" style="background-color: white; border-radius: 3px; box-shadow: 1px 1px 2px lightgrey;">
      <div class="row">
      <div class="col-sm-2 " style="margin-left: 20px">
        <h4>My Spaces</h4>
      </div>
      </div>
      <div class="row">
      <div class="col-sm-1"></div>
      <div class="col-sm-10">
        <div class="row">

          </div>
        </div>
      </div>
      </div>
  <div class="row breath"></div>
  <div class="row" style="background-color: white; border-radius: 3px; box-shadow: 1px 1px 2px lightgrey;">
    <div class="row">
    <div class="col-sm-2 " style="margin-left: 20px">
      <h4>My Reviews</h4>
    </div>
    </div>
    <div class="row">
    <div class="col-sm-1"></div>
    <div class="col-sm-10">
      <div class="row">

        </div>
      </div>
    </div>
    </div>
  <div class="row breath"></div>
  <div class="row breath"></div>
</div>

















