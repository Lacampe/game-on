<div class="container">
  <div class="container" id='user-show-info'>
    <div class="row">
      <div class="col-xs-12 col-md-6">
        <h1><%= @user.first_name %></h1>
        <h3><em>Member since <%= I18n.l(@user.created_at, format: "%B %Y") %></em></h3>
      </div>
      <div class="col-xs-6 col-md-3 col-md-offset-2">
      <% if @user.photo %>
        <%= cl_image_tag @user.photo.path, transformation: [{width: 250, height: 250, gravity: 'face', radius: 'max', crop: 'thumb'}, {width: 100}] %>
      <% else %>
        <%= image_tag "blank-avatar.png", class: "avatar-extra-large" %>
      <% end %>
      </div>
    </div>
  </div>
  <div class="container" class="col-xs-8 col-offset-xs-2">
    <div class="row">
      <div class="tabs">
        <a class="tab active" href="#">
          <h3>Profile</h3>
        </a>
        <a class="tab" href="#">
          <h3>3 Bookings</h3>
        </a>
        <a class="tab" href="#">
          <h3>19 Reviews</h3>
        </a>
      </div>
    </div>
  </div>
</div>
