<div class="wrapper">
<% content_for :title, "GameOn - #{@space.name}" %>
 <% if @space.photos %>
 <% image =  cl_image_path(@space.photos.first.path, width: 1250, height: 400, crop: :fill) %>
 <% else %>
 <% image = image_path('logo.png') %>
 <% end %>
 <%= image_tag(image) %>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-lg-6">
      <div class="row">
        <div class="card-space col-xs-12">
          <h1><%= @space.name %></h1>
          <p>Location: <em><%= @space.address %></em></p>
          <p>Facility: <em><%= @space.category %></em></p>
          <br>
          <h4><strong>Price per hour: Â£<%= @space.price_per_hour %></strong></h4>
        </div>
        <div class="card-space col-xs-12">
          <h5><strong>Description:</strong></h5>
          <p><%= @space.description %></p>
        </div>
      </div>
    </div>
    <div class="row col-xs-12 col-lg-5 col-lg-offset-1">
      <div class="card-space">

        <%= render 'shared/new_booking', space: @space, booking: @booking %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="card-space col-xs-12">
      <h3>Location:</h3>
      <div id="map" style="width: 100%; height: 450px;"></div>
    </div>

  <% content_for(:after_js) do %>
    <%= javascript_tag do %>
      $(document).ready(function() {
        var handler = Gmaps.build('Google');
        handler.buildMap({ internal: { id: 'map' } }, function() {
          markers = handler.addMarkers(<%= raw @markers.to_json %>);
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
          if (markers.length == 0) {
            handler.getMap().setZoom(2);
          } else if (markers.length == 1) {
            handler.getMap().setZoom(15);
          }
        });
      });
    <% end %>
  <% end %>
</div>
